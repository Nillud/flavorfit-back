model Ingredient {
    id String @id @default(cuid())

    name    String
    iconUrl String @map("icon_url")
    content String

    recipeIngredients RecipeIngredient[]

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @default(now()) @map("updated_at")

    @@map("ingredients")
}

enum Unit {
    GRAM // г
    MILLILITER // мл
    PIECE // шт.
    TEASPOON // ч. ложка
    TABLESPOON // ст. ложка
    CLOVES // зубчик
}
